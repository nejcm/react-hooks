    "eslint-plugin-react-hooks": "~4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-runtime": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "~2.8.4",
